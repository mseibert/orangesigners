            border-radius: 50%;
            margin: 0 auto;
            position: relative;
            box-shadow: 0 8px 16px rgba(255, 107, 107, 0.3);
        }

        .octopus-eye {
            width: 16px;
            height: 16px;
            background: #333;
            border-radius: 50%;
            position: absolute;
            top: 25px;
            animation: blink 4s infinite;
        }

        .octopus-eye.left {
            left: 20px;
        }

        .octopus-eye.right {
            right: 20px;
        }

        @keyframes blink {
            0%, 90%, 100% { transform: scaleY(1); }
