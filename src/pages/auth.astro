        }

        .octopus-mouth {
            width: 20px;
            height: 12px;
            border: 3px solid #333;
            border-top: none;
            border-radius: 0 0 20px 20px;
            position: absolute;
            bottom: 15px;
            left: 50%;
            transform: translateX(-50%);
        }

        .octopus-tentacle {
            width: 8px;
            height: 40px;
            background: #FF6B6B;
            border-radius: 4px;
            position: absolute;
            bottom: -20px;
